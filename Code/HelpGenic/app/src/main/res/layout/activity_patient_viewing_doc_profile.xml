<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:verticalScrollbarPosition="right"
    android:layout_marginBottom="55dp"
    >



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="236dp"
            android:layout_height="186dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/doctor2"/>

        <TextView
            android:id="@+id/personaldetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#56B35A"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Doctor Details"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/docName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Huzaifa Tharki"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/docSpeciality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Psycopath"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_baseline_star_24" />

        <TextView
            android:id="@+id/docEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="huzaifatharki@fatima.com"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_baseline_email_24" />

        <TextView
            android:id="@+id/virtual_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#56B35A"
            android:gravity="center"
            android:paddingStart="10dp"
            android:layout_marginTop="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Virtual Schedule"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_baseline_laptop_windows_24" />

        <TextView
            android:id="@+id/fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fee: 500/PKR"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_gravity="start"

           />

        <ListView
            android:id="@+id/virtual_app_list"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:nestedScrollingEnabled="true"
            />


        <TextView
            android:id="@+id/physical_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#56B35A"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="20dp"
            android:text="Physical Schedule"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_baseline_people_24" />


        <ExpandableListView
            android:id="@+id/psExpandable"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:nestedScrollingEnabled="true" />

        <TextView
            android:id="@+id/your_appointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#56B35A"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="20dp"
            android:text="Prior Appointments"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_baseline_history_24" />


        <ListView
            android:id="@+id/prior_appointments"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:nestedScrollingEnabled="true" />


    </LinearLayout>



        </ScrollView>